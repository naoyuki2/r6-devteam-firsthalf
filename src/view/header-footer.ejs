<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ヘッダーとフッター</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
    <style>
      .bg-blue {
        background-color: #84c9ef !important;
      }

      body {
        padding-top: 70px; /* ここにヘッダー分のスペースを追加した */
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <header class="bg-blue px-3 py-2 fixed-top">
      <div class="d-flex justify-content-between align-items-center">
        <!-- 左側のマイページのアイコンのとこ -->
        <i class="bi bi-person-circle" style="font-size: 2rem"></i>
        <!-- ヘッダーの真ん中のロゴがくるところ -->
        <div
          class="rounded-circle bg-dark"
          style="width: 2rem; height: 2rem"
        ></div>
        <div style="width: 2rem; height: 2rem"></div>
      </div>
    </header>

    <div class="container">
      <% for(let i = 1; i <= 10; i++) { %>
        <div class="bg-primary text-white p-2 mb-2">
          <h1>コンテンツ <%= i %></h1>
          <p>ここにコンテンツが入ります。</p>
        </div>
      <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-light sticky-bottom py-3 px-4 mt-5">
      <div class="d-flex justify-content-between">
        <i class="bi bi-house-door" style="font-size: 2rem"></i>
        <i class="bi bi-plus" style="font-size: 2rem"></i>
        <i class="bi bi-chat-dots" style="font-size: 2rem"></i>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
