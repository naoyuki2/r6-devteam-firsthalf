<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/destyle.css@1.0.15/destyle.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/icons/bootstrap-icons.css" />
  </head>
  <body>
    <% data.requests.forEach(function(request) { %>
      <div class="requestcard border-bottom border-opacity-25">
        <div class="container">
          <div class="d-flex">
            <i class="bi bi-person-circle me-3" style="font-size: 1.5rem"></i>
            <span class="fw-bold my-2">ゲストさん</span>
            <span class="ms-auto my-2"><%= request.created_at.slice(0, 10) %> <%= request.created_at.slice(11, 16) %></span>
          </div>
          <p class="fw-bold mb-2"><%= request.title %></p>
          <p class="text-truncate mb-2">
            <%= request.description %>
          </p>
        </div>
        <div class="d-flex justify-content-evenly">
          <div class="d-flex align-items-center">
            <div class="d-flex-flex-column">
              <i class="bi bi-house-door" style="font-size: 1.5rem"></i>
              <p style="font-size: 8px" class="mb-2">HOME</p>
            </div>
            <span class="ms-3"><%= request.delivery_location %></span>
          </div>
          <div>
            <div class="d-flex align-items-center">
              <div class="d-flex-flex-column">
                <i class="bi bi-shop" style="font-size: 1.5rem"></i>
                <p style="font-size: 8px" class="mb-2">SHOP</p>
              </div>
              <span class="ms-3"><%= request.location_prefecture %></span>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
    
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
